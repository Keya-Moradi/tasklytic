<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"> <!-- Specifies character encoding for the document -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- Ensures the page is responsive on mobile devices -->
    <title>Completed Tasks</title> <!-- Sets the title of the page -->
    <link rel="stylesheet" href="/css/styles.css"> <!-- Link to the external CSS file for styling -->
</head>
<body>   
    <!-- Navbar section -->
    <nav>
        <!-- Logo displayed in the navigation bar -->
        <div class="logo">
            <img src="/images/Tasklytic.webp" alt="Tasklytic Logo"> <!-- Displays the Tasklytic logo -->
        </div>
        <!-- Navigation links -->
        <ul>
            <li><a href="/tasks">All Tasks</a></li> <!-- Link to view all tasks -->
            <li><a href="/tasks/pending">Pending Tasks</a></li> <!-- Link to view pending tasks -->
            <li><a href="/tasks/new">Add New Task</a></li> <!-- Link to add a new task -->
            <li><a href="/users/logout">Logout</a></li> <!-- Link to log out -->
        </ul>
    </nav>

    <h1>Completed Tasks</h1> <!-- Page heading -->

    <!-- Conditional statement to check if there are completed tasks -->
    <% if (tasks.length === 0) { %>
        <p>There are currently no completed tasks.</p> <!-- Message shown if there are no completed tasks -->
    <% } else { %>
        <!-- If there are completed tasks, display them in an unordered list -->
        <ul>
            <!-- Iterate through each completed task and display its details -->
            <% tasks.forEach(task => { %>
                <li>
                    <h3><%= task.title %></h3> <!-- Displays the task title -->
                    <p><%= task.description %></p> <!-- Displays the task description -->
                    <p>Due Date: <%= task.dueDate.toDateString() %></p> <!-- Displays the task due date in a readable format -->

                    <!-- Edit button for the task -->
                    <form action="/tasks/<%= task._id %>/edit" method="GET" style="display:inline;">
                        <button type="submit">Edit Task</button>
                    </form>

                    <!-- Delete button for the task -->
                    <form action="/tasks/<%= task._id %>?_method=DELETE" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this task? This action cannot be undone.');">
                        <button type="submit">Delete Task</button>
                    </form>
                </li>
            <% }); %>
        </ul>
    <% } %>

</body>
</html>
