# MongoDB Connection String
# Get this from MongoDB Atlas or your local MongoDB installation
MONGO_URI=mongodb://localhost:27017/tasklytic

# Session Secret
# Generate a random string for production (at least 32 characters recommended)
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your_session_secret_here_change_this_in_production

# Port (optional)
# The port your application will run on
PORT=3000

# Node Environment (optional)
# Set to 'production' in production, 'development' for local development
NODE_ENV=development
